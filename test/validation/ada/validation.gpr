with "../../../config/zoneinfo_config.gpr";
with "../../../zoneinfo.gpr";

project Validation is

   for Source_Dirs use (".", "../../unit");
   for Object_Dir use "../../../obj/validation";
   for Exec_Dir use "../../../bin/validation";

   for Main use ("validation_runner.adb",
                 "comprehensive_validation.adb",
                 "full_scale_validation.adb",
                 "dst_disambiguation_validation.adb",
                 "api_completeness_test.adb");

   package Compiler is
      for Default_Switches ("Ada") use ZoneInfo_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es");  -- Symbolic traceback
   end Binder;

   package Builder is
      for Switches ("Ada") use ("-g");  -- Debug symbols
   end Builder;

end Validation;
